# Database Configuration
# Variantlar: 'file' (SQLite), 'mongodb', 'postgresql'
DB_TYPE=file

# SQLite Configuration (DB_TYPE=file)
SQLITE_DB_PATH=./data/school_attendance.db

# MongoDB Configuration (DB_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/school_attendance

# PostgreSQL Configuration (DB_TYPE=postgresql)
DATABASE_URL=postgresql://user:password@localhost:5432/school_attendance

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# JWT Secret
JWT_SECRET=your_jwt_secret_here_change_this

# Session Secret
SESSION_SECRET=your_session_secret_here_change_this

# Server Configuration
PORT=5000
NODE_ENV=development

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Timezone
TZ=Asia/Tashkent

# Super Admin Configuration (First user)
SUPER_ADMIN_PHONE=+998901234567
SUPER_ADMIN_PASSWORD=admin123
